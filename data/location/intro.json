        "help":{
            "text":["This is one of the important decisions of the game."],
            "actions": {
                "100":{
                    "Label": "Back",
                    "goto":"SELF.200"
                }
            }
        }
    },
    "seat":{
        "onStart":{
            "PlayerData":{
                "name.first":"Janine",
                "name.last":"Bauer"
            }
        },
        "text":["In the hurry you forgot you seat number. You take out your ticket. It reads:","Frau #PlayerData.name.first# #PlayerData.name.last#","Frankfurt a.M. -> Berlin","Wagon 6 Seat 48"],
        "actions": {
            "1000":{
                "Label": "Change Name",
                "showDialog":"pcName"
            }
        }
    },
    "about":{
        "bg":"texture/events/intro/about.jpg",
        "text": ["This game was created by me."],
        "actions": {
            "100":{
                "Label": "Back",
                "goto":"SELF.start"
            }
        }
    },
    "skipIntro":{
        "finish":{
            "onStart":{
                "conditionExecute":{
                    "100":{
                        "condition":"PlayerData.prehistory=MiscData.const.prehistory.popular",
                        "PlayerData":{
                            "skill.heels": 3,
                            "trait.genes.appearance":7
                        },
                        "modifierUpdate":{"keyword":"gene"}
                    },
                    "200":{
                        "condition":"PlayerData.prehistory=MiscData.const.prehistory.nerd",
                        "PlayerData":{
                            "skill.heels": 1,
                            "trait.genes.appearance":4
                        },
                        "modifierUpdate":{"keyword":"gene"}
                    },
                    "1100":{
                        "condition":"PlayerData.occupationStart=MiscData.const.occupationStart.school",
                        "goto":"dahlemDorm.bureau"
                    },
                    "1200":{
                        "condition":"PlayerData.occupationStart=MiscData.const.occupationStart.university",
                        "goto":"testApartment.hallway"
                    }
                },
                "CurrentUi":{
                    "ShowStatusBar":true
                }
                
            }
        },
        "occupation":{
            "bg":null,
            "textLong":[
                "[b]Schoolgirl (adult)[/b]",
                "You start at the beginning of your last year at school. You just turned 18.",
                "",
                "[b]University Student[/b]",
                "You start ath the beginning of your first year at university. You just turned 19. Currently not available.",
                ""
            ],
            "actions":{
                "6000":{
                    "Label":"Schoolgirl (adult)",
                    "goto":"SELF.skipIntro.overview",
                    "PlayerData":{"occupationStart":{"#value":"MiscData.const.occupationStart.school"}}
                },
                "4000":{
                    "Label":"University Student",
                    "goto":"SELF.skipIntro.overview",
                    "PlayerData":{"occupationStart":{"#value":"MiscData.const.occupationStart.university"}}
                }
            }
        },
        "overview":{
            "onStart":{
                "TEMP":{
                    "prehistory_name.0":"Average Girl",
                    "prehistory_name.1":"Popular Girl",
                    "prehistory_name.2":"Nerd",
                    "occupation_name.0":"Schoolgirl (adult)",
                    "occupation_name.1":"University Student"
                }
            },
            "text":[
                "Name: #PlayerData.name.first# #PlayerData.name.last#",
                "Prehistory: #TEMP.prehistory_name[PlayerData.prehistory]#",
                "Occupation: #TEMP.occupation_name[PlayerData.occupationStart]#"
            ],
            "actions": {
                "3000":{
                    "Label": "Change Name",
                    "showDialog":"pcName"
                },
                "2000":{
                    "Label": "Pick Prehistory",
                    "goto":"SELF.skipIntro.prehistory"
                },
                "1500":{
                    "Label": "Pick Occupation",
                    "goto":"SELF.skipIntro.occupation"
                },
                "1000":{
                    "Label": "Finish",
                    "goto":"SELF.skipIntro.finish"
                }
            }
        },
        "prehistory":{
            "bg":null,
            "textLong":[
                "[b]Average Girl[/b]",
                "You start with balanced skills",
                "",
                "[b]Nerd[/b]",
                "You start with more education but less beauty skills",
                "",
                "[b]Popular girl[/b]",
                "You start with more beauty skills but less education",
                ""
            ],
            "actions":{
                "6000":{
                    "Label":"Average Girl",
                    "goto":"SELF.skipIntro.overview",
                    "PlayerData":{"prehistory":{"#value":"MiscData.const.prehistory.average"}}
                },
                "5000":{
                    "Label":"Nerd",
                    "goto":"SELF.skipIntro.overview",
                    "PlayerData":{"prehistory":{"#value":"MiscData.const.prehistory.nerd"}}
                },
                "4000":{
                    "Label":"Popular Girl",
                    "goto":"SELF.skipIntro.overview",
                    "PlayerData":{"prehistory":{"#value":"MiscData.const.prehistory.popular"}}
                }
            }
        }
    }
}