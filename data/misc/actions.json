{
    "setAlarmClock":{
        "Label":"Set Alarm Clock",
        "showDialog":{
            "dialog":"InputDialog",
            "label": "Set Alarm Clock (Format hh:mm)",
            "target": "PlayerData.alarmclock.time",
            "updateLocation": true,
            "value":"00:00",
            "validateRegex": "^\\d{1,2}:\\d{2}$"
        }
    },
    "shaveBody":{
        "Label":"Shave your body",
        "~value":{
            "1000":{
                "condition":{
                    "var":"PlayerData.bath.razor",
                    "mode":"leq",
                    "val":0
                },
                "value":{
                    "Disabled": true,
                    "Tooltip": "You don't have any razors left."
                }
            },
            "100":{
                "value":{
                    "interrupt":"bath.shave"
                }
            }
        }
    },
    "shower":{
        "Label":"Take a shower",
        "PlayerData": {
            "stat.hygiene_body.current": 10000
        },
        "Time":{"Pass":{"Duration":300,"Activity":"shower"}}

    },
    "sleep":{
        "~value":{
            "1000":{
                "condition":{
                    "var":"PlayerData.stat.sleep.current",
                    "mode":"heq",
                    "val":7000
                },
                "value":{
                    "Label": "Go to sleep",
                    "Disabled": true,
                    "Tooltip": "You are not tired enough to go to sleep."
                }
            },
            "900":{
                "condition":{
                    "var":"PlayerData.stat.thirst.current",
                    "mode":"leq",
                    "val":1000
                },
                "value":{
                    "Label": "Go to sleep",
                    "Disabled": true,
                    "Tooltip": "You are too thirsty to go to sleep."
                }
            },
            "800":{
                "condition":{
                    "var":"PlayerData.stat.hunger.current",
                    "mode":"leq",
                    "val":1000
                },
                "value":{
                    "Label": "Go to sleep",
                    "Disabled": true,
                    "Tooltip": "You are too hungry to go to sleep."
                }
            },
            "100":{
                "value":{
                    "Label": "Go to sleep",
                    "sleep": {}
                }
            }
        }
    }
}